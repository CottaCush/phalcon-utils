{
  "name": "cottacush/phalcon-utils",
  "license": "MIT",
  "description": "Phalcon Utils is a repository for libraries that are used across different phalcon projects.",
  "keywords": [
    "phalcon",
    "library",
    "utils",
    "cottacush",
    "mailer",
    "validation"
  ],
  "homepage": "https://bitbucket.org/cottacush/phalcon-utils#readme",
  "type": "library",
  "authors": [
    {
      "name": "Adeyemi Olaoye",
      "email": "yemi@cottacush.com",
      "role": "Creator"
    },
    {
      "name": "Adegoke Obasa",
      "email": "goke@cottacush.com",
      "role": "Developer"
    },
    {
      "name": "Olawale Lawal",
      "email": "wale@cottacush.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.6 | >=7.0",
    "ext-phalcon": "^3.0",
    "swiftmailer/swiftmailer": "@stable",
    "phalcon/incubator": "^3.0",
    "aws/aws-sdk-php": "^3.3",
    "psr/log": "^1.0",
    "ext-xml": ">=0.0.0",
    "justblackbird/handlebars.php-helpers": "^1.2",
    "fightbulc/moment": "^1.26"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.5||~6.0",
    "redound/phalcon-rest": "^1.4.0",
    "pagerfanta/pagerfanta": "^1.0",
    "bshaffer/oauth2-server-php": "^1.8",
    "league/fractal": "^0.13.0",
    "xamin/handlebars.php": "^0.10.4"
  },
  "suggest": {
    "redound/phalcon-rest": "Install Phalcon Rest for REST app bootstrap support",
    "pagerfanta/pagerfanta": "Install  Pagerfanta for Pagination support",
    "bshaffer/oauth2-server-php": "Install Bshaffer Oauth Server for OAuth2 support",
    "league/fractal": "Install Fractal for transformer support",
    "xamin/handlebars.php": "Install Handlebars for text replacement"
  },
  "autoload": {
    "psr-4": {
      "PhalconUtils\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
